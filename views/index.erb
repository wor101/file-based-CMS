<% if session[:message] %>
  <h3 class="message"><%= session.delete(:message) %></h3>
<% end %>

<ul>
  <% @file_names.each do |file| %>
    <li>
      <a href="<%= file %>"><%= file %> </a>
      <a href="<%= file %>/edit">Edit</a>
      <form class="inline" method="post" action="<%= file %>/delete">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% end %>
</ul>
